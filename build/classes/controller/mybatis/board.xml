<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- sql mapper   -->  
<mapper namespace="board"> <!-- namespace : 일종의 식별역할의 변수 -->
	
	<select id="getList" resultType="board" parameterType="java.util.Map">
		select * from board f order by idx desc limit #{startNo},#{pageSize}
	</select>
	<select id="selectByIdx" resultType="board" parameterType="int">
		select * from board where idx=#{idx} 
	</select>
	<select id="getCount" resultType="int" >
		select count(*) from board
	</select>
	
	<insert id="insert" parameterType="board">
		insert into board (userId,password,subject,content,)
		values (#{userId},#{password},#{subject},#{content})
	</insert>
	
	<update id="update" parameterType="board">
		update board set subject =#{subject}, content=#{content}
		where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="java.util.Map"><!-- 글 비밀번호 확인하고 삭제 -->
		delete from board where idx=#{idx} and password =#{password}
	</delete>
	
	<select id="passwordCheck" resultType="board" parameterType="java.util.Map">
		select * from board where idx=#{idx} and password =#{password}
	</select>
	
	<!-- 조회수 증가 -->
	<update id="readCount" parameterType="int">
		update board set readCount = readCount +1 where idx=#{idx}
	</update>

</mapper>