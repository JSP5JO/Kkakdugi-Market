<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="users">
	<select id="loginCheck" parameterType="java.util.Map" resultType="SessionDto"> <!-- 로그인시 아이디 비밀번호 체크 -->
		select idx,id,proidx,email from users where id=#{id} 
		and pw=#{pw}	
	</select>
	
	<insert id="regist" parameterType="dto.Users"> <!-- 회원가입 카카오 로그인 추가--> 
		insert into users(name,id,pw,email,kakaoId) 
		values (#{name},#{id},#{pw},#{email},#{kakaoId})
	</insert>
	
	<select id="loginUserInfo" parameterType="String" resultType="Users"> <!-- KakaoLoginAction에서 사용 -->
		select * from users where id=#{id}
	</select>	
	
	<select id="findKakaoId" parameterType = "Long" resultType="Users"> <!-- 카카오 회원인지 찾기 -->
		select * from users where kakaoId = #{kakaoId}
	</select>
	
	<select id="idCheck" parameterType="String" resultType="int"> <!-- 회원가입시 아이디 중복체크 -->
		select count(id) from users where id =#{id}
	</select>
	
	<select id="findId" parameterType="java.util.Map" resultType="String"> <!-- 아이디 찾기 -->
		select id from users where name=#{name} and email=#{email}
	</select>
	
	<select id="findPw" parameterType="java.util.Map" resultType="String"> <!-- 비밀번호 찾기 -->
		select pw from users where id =#{id} and name=#{name} and email=#{email}
	</select>
	
		<!-- 전문가 번호 등록, 업데이트-->
	<update id="registMyField" parameterType="SessionDto">
		update users set proIdx = #{proIdx} where id = #{id}
	</update>
	
  </mapper>